<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Courses</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .navbar {
            background-color: #f8f9fa !important;
            padding: 0;
        }
        .nav-link:hover {
            background-color: #e0e3e7;
            transform: scale(1.05);
        }
        .container {
            margin-top: 20px;
        }
        .search-form {
            margin-bottom: 20px;
        }
        table {
            background-color: #fff;
            color: #333;
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f4f4f4;
        }
        .btn-view-details {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href='/<%= userType.toLowerCase() %>-homepage'>
                <%= userType %> Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                    <% if (userType === 'Student') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register-course">Register a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-calendar">Timetable</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cancel-course">Cancel a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/past-courses">History Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/feedback">Feedback a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
        <h1 class="text-center text-light mb-4">All Courses</h1>

        <!-- Search Form -->
        <form class="search-form" action="/courses" method="GET">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label for="criteria" class="form-label">Search by:</label>
                    <select id="criteria" name="criteria" class="form-select">
                        <option value="all" <%= criteria === 'all' ? 'selected' : '' %>>View All</option>
                        <option value="cid" <%= criteria === 'cid' ? 'selected' : '' %>>Course ID</option>
                        <option value="name" <%= criteria === 'name' ? 'selected' : '' %>>Course Name</option>
                        <option value="semester" <%= criteria === 'semester' ? 'selected' : '' %>>Semester</option>
                        <option value="instructor" <%= criteria === 'instructor' ? 'selected' : '' %>>Instructor</option>
                    </select>
                </div> 
                <div class="col-md-5">
                    <label for="query" class="form-label">Search Term:</label>
                    <input
                        type="text"
                        name="query"
                        id="query"
                        placeholder="Enter your search term"
                        class="form-control"
                        value="<%= query %>"
                    />
                </div>
                <div class="col-md-3 d-flex gap-2">
                    <button type="submit" class="btn btn-info flex-grow-1">Search</button>
                    <a href="/courses" class="btn btn-primary flex-grow-1">Reset</a>
                </div>
            </div>
        </form>

        <!-- Course List -->
        <% if (courses.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Course ID</th>
                        <th>Semester</th>
                        <th>Credits</th>
                        <th>Instructor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.name %></td>
                            <td><%= course.cid %></td>
                            <td><%= course.semester %></td>
                            <td><%= course.credit %></td>
                            <td><%= course.instructor %></td>
                            <td>
                                <a href="/course-details/<%= course.cid %>/<%= course.semester %>" class="btn btn-info btn-view-details">View Details</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center text-light">No courses found for your search criteria.</p>
        <% } %>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
