<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Details</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .navbar {
            background-color: #f8f9fa !important;
            padding: 0;
        }
        .nav-link:hover {
            background-color: #e0e3e7;
            transform: scale(1.05);
        }
        .container {
            margin-top: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: left;
            color: #333; /* Darker text for readability */
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        .btn-back {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Student Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                    <li class="nav-item">
                        <a class="nav-link" href="/courses">View Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register-course">Register a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cancel-course">Cancel a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/past-courses">History Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/feedback">Feedback a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1 class="text-center mb-4">Course Details</h1>
        <h2 class="text-primary"><%= course.name %> (<%= course.cid %>)</h2>
        <table class="table table-bordered thead-dark">
            <tr>
                <th>Course ID</th>
                <td><%= course.cid %></td>
            </tr>
            <tr>
                <th>Name</th>
                <td><%= course.name %></td>
            </tr>
            <tr>
                <th>Credits</th>
                <td><%= course.credit %></td>
            </tr>
            <tr>
                <th>Semester</th>
                <td><%= course.semester %></td>
            </tr>
            <tr>
                <th>Instructor</th>
                <td><%= course.instructor %></td>
            </tr>
        </table>

        <h3 class="mt-4">Timetable</h3>
        <% if (course.timetable.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Day</th>
                        <th>Period</th>
                    </tr>
                </thead>
                <tbody>
                    <% course.timetable.forEach(slot => { %>
                        <tr>
                            <td>
                                <% if (slot.week_day === 2) { %>Monday<% } %>
                                <% if (slot.week_day === 3) { %>Tuesday<% } %>
                                <% if (slot.week_day === 4) { %>Wednesday<% } %>
                                <% if (slot.week_day === 5) { %>Thursday<% } %>
                                <% if (slot.week_day === 6) { %>Friday<% } %>
                                <% if (slot.week_day === 7) { %>Saturday<% } %>
                                <% if (slot.week_day === 8) { %>Sunday<% } %>
                            </td>
                            <td>Period <%= slot.class_period %></td>
                        </tr>
                    <% }) %>                    
                </tbody>
            </table>
        <% } else { %>
            <p>No timetable available for this course.</p>
        <% } %>

        <a href="/courses" class="btn btn-primary btn-back">Back to Courses</a>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
