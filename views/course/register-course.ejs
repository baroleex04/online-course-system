<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Course</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .navbar {
            background-color: #f8f9fa !important;
            padding: 0;
        }
        .nav-link:hover {
            background-color: #e0e3e7;
            transform: scale(1.05);
        }
        .container {
            margin-top: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            color: #333;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .error-message {
            color: red;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .course-list {
            list-style-type: none;
            padding: 0;
        }
        .course-item {
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .course-item h3 {
            color: #007bff;
        }
        .course-item ul {
            margin: 10px 0;
            padding: 0;
            list-style-type: none;
        }
        .course-item ul li {
            margin-bottom: 5px;
        }
        .register-btn {
            margin-top: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
        }
        .register-btn:hover {
            background-color: #0056b3;
        }
        .search-form {
            margin-bottom: 30px;
        }
        .btn-search {
            background-color: #28a745;
            color: #fff;
            border: none;
        }
        .btn-search:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href='/<%= userType.toLowerCase() %>-homepage'>
                <%= userType %> Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                    <li class="nav-item active">
                        <a class="nav-link" href="/courses">View Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register-course">Register a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/view-calendar">Timetable</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cancel-course">Cancel a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/past-courses">History Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/feedback">Feedback a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/view-feedback">View Feedback</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container">
        <h1 class="text-center">Register for a Course</h1>
        
        <!-- Search Form -->
        <form action="/register-course" method="GET" class="mb-2">
            <div class="row g-3 align-items-center">
                <div class="col-md-9">
                    <input 
                        type="text" 
                        name="search" 
                        class="form-control" 
                        placeholder="Search courses by name or ID" 
                        value="<%= searchQuery %>" 
                    />
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-info w-100">Search</button>
                </div>
            </div>
        </form>

        <!-- Error Message -->
        <% if (errorMessage) { %>
            <p class="error-message text-center"><%= errorMessage %></p>
        <% } %>

        <% if (successMessage) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= successMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        
        <!-- Course List -->
        <% if (courses.length > 0) { %>
            <ul class="course-list">
                <% courses.forEach(course => { %>
                    <li class="course-item">
                        <h3><%= course.name %> (<%= course.cid %>) - Semester: <%= course.semester %></h3>
                        <p><strong>Credits:</strong> <%= course.credit %></p>
                        <p><strong>Timetable:</strong></p>
                        <ul>
                            <% course.timetable.forEach(slot => { %>
                                <li>
                                    Day: 
                                    <% if (slot.week_day === 2) { %>Monday<% } %>
                                    <% if (slot.week_day === 3) { %>Tuesday<% } %>
                                    <% if (slot.week_day === 4) { %>Wednesday<% } %>
                                    <% if (slot.week_day === 5) { %>Thursday<% } %>
                                    <% if (slot.week_day === 6) { %>Friday<% } %>
                                    <% if (slot.week_day === 7) { %>Saturday<% } %>
                                    <% if (slot.week_day === 8) { %>Sunday<% } %>,
                                    Period: <%= slot.class_period %>
                                </li>
                            <% }) %>
                        </ul>                        
                        <form action="/register-course" method="POST">
                            <input type="hidden" name="cid" value="<%= course.cid %>" />
                            <input type="hidden" name="semester" value="<%= course.semester %>" />
                            <button type="submit" class="btn register-btn w-100">Register</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p class="text-center">No courses available for registration.</p>
        <% } %>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
