<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Courses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .container {
            margin-top: 30px;
        }
        .navbar {
            background-color: #f8f9fa !important;
        }
        .table {
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light" style="height: 40px;">
        <div class="container-fluid">
            <a class="navbar-brand" href='/<%= userType.toLowerCase() %>-homepage'>
                <%= userType %> Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                    <% if (userType === 'Student') { %>
                        <!-- Student-specific Nav Items -->
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register-course">Register a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-calendar">Timetable</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cancel-course">Cancel a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/past-courses">History Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/feedback">Feedback a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                    <% } else if (userType === 'Faculty' || userType === 'Staff') { %>
                        <!-- Faculty-specific Nav Items -->
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-course">Add Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-student-registrations">View Student Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/edit-course">Edit Course</a>
                        </li>
                    <% } %>
                    <% if (userType === 'Admin') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-course">Add Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/list-courses">Edit Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-student-registrations">View Student Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/create-user">Create Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/delete-user">Delete Users</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Courses List -->
    <div class="container">
        <h1 class="text-center my-4">List of Courses</h1>
        <% if (courses && courses.length > 0) { %>
            <table class="table table-striped table-hover text-center shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Credits</th>
                        <th>Semester</th>
                        <th>Instructor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.cid %></td>
                            <td><%= course.name %></td>
                            <td><%= course.credit %></td>
                            <td><%= course.semester %></td>
                            <td><%= course.instructor %></td>
                            <td>
                                <a href="/edit-course/<%= course.cid %>/<%= course.semester %>" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/delete-course" method="POST" style="display: inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this course? This action cannot be undone.');">
                                    <input type="hidden" name="cid" value="<%= course.cid %>">
                                    <input type="hidden" name="semester" value="<%= course.semester %>">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>                
            </table>
        <% } else { %>
            <div class="alert alert-warning text-center" role="alert">
                No courses available.
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
