<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Course</title>
</head>
<body>
    <h1>Delete a Course</h1>
    <% if (courses.length > 0) { %>
        <ul>
            <% courses.forEach(course => { %>
                <li>
                    <h3><%= course.name %> (<%= course.cid %>) - Semester: <%= course.semester %></h3>
                    <p>Credits: <%= course.credit %></p>
                    <p>Instructor: <%= course.instructor %></p>
                    <form action="/delete-course" method="POST">
                        <input type="hidden" name="cid" value="<%= course.cid %>" />
                        <input type="hidden" name="semester" value="<%= course.semester %>" />
                        <button type="submit">Delete Course</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No courses available for deletion.</p>
    <% } %>
</body>
</html>
