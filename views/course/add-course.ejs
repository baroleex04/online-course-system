    <!-- Success and Error Messages -->
    <% if (successMessage) { %>
        <div class="alert alert-success" role="alert">
            <%= successMessage %>
        </div>
    <% } %>
    <% if (errorMessage) { %>
        <div class="alert alert-danger" role="alert">
            <%= errorMessage %>
        </div>
    <% } %>
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="text-center text-primary mb-4">Add Course</h1>
                        <form action="/add-course" method="POST">
                            <!-- Course Details  EDIT HERE IN BACKEND-->
                            <div class="mb-3">
                                <label for="cid" class="form-label">Course ID</label>
                                <input type="text" name="cid" id="cid" class="form-control" placeholder="Course ID" required>
                            </div>
                            <div class="mb-3">
                                <label for="semester" class="form-label">Semester</label>
                                <input type="text" name="semester" id="semester" class="form-control" placeholder="Semester (e.g., 2024FALL)" required>
                            </div>
                            <div class="mb-3">
                                <label for="name" class="form-label">Course Name</label>
                                <input type="text" name="name" id="name" class="form-control" placeholder="Course Name" required>
                            </div>
                            <div class="mb-3">
                                <label for="credit" class="form-label">Credits</label>
                                <input type="number" name="credit" id="credit" class="form-control" placeholder="Credits" required min="1" max="10">
                            </div>
                            <div class="mb-3">
                                <label for="instructor" class="form-label">Instructor</label>
                                <input type="text" name="instructor" id="instructor" class="form-control" placeholder="Instructor" required>
                            </div>

                            <!-- Timetable Entries -->
                            <h2 class="text-secondary mt-4">Timetable</h2>
                            <div id="timetable-container">
                                <!-- Initial timetable entry -->
                                <div class="row timetable-entry mb-3">
                                    <div class="col-md-5">
                                        <select name="week_day[]" class="form-select" required>
                                            <option value="2">Monday</option>
                                            <option value="3">Tuesday</option>
                                            <option value="4">Wednesday</option>
                                            <option value="5">Thursday</option>
                                            <option value="6">Friday</option>
                                            <option value="7">Saturday</option>
                                            <option value="8">Sunday</option>
                                        </select>
                                    </div>
                                    <div class="col-md-5">
                                        <select name="class_period[]" class="form-select" required>
                                            <% for (let i = 1; i <= 12; i++) { %>
                                                <option value="<%= i %>">Period <%= i %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="col-md-2 d-flex align-items-center">
                                        <button type="button" class="btn btn-danger btn-sm" onclick="this.parentElement.parentElement.remove()">Remove</button>
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="btn btn-secondary btn-sm mb-3" onclick="addTimetableEntry()">Add Timetable Entry</button>

                            <button type="submit" class="btn btn-primary w-100">Add Course</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
