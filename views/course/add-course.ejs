<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Course</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .navbar {
            background-color: #f8f9fa !important;
            padding: 0;
        }
        .nav-link:hover {
            background-color: #e0e3e7;
            transform: scale(1.05);
        }
    </style>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        // Function to add a new timetable entry row
        function addTimetableEntry() {
            const container = document.getElementById('timetable-container');
            const row = document.createElement('div');
            row.className = 'row timetable-entry mb-3';

            row.innerHTML = `
                <div class="col-md-5">
                    <select name="week_day[]" class="form-select" required>
                        <option value="2">Monday</option>
                        <option value="3">Tuesday</option>
                        <option value="4">Wednesday</option>
                        <option value="5">Thursday</option>
                        <option value="6">Friday</option>
                        <option value="7">Saturday</option>
                        <option value="8">Sunday</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <select name="class_period[]" class="form-select" required>
                        <% for (let i = 1; i <= 12; i++) { %>
                            <option value="<%= i %>">Period <%= i %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-center">
                    <button type="button" class="btn btn-danger btn-sm" onclick="this.parentElement.parentElement.remove()">Remove</button>
                </div>
            `;

            container.appendChild(row);
        }

        // Validate for duplicate timetable entries
        document.addEventListener('submit', (event) => {
            const weekDays = Array.from(document.querySelectorAll("select[name='week_day[]']")).map((el) => el.value);
            const classPeriods = Array.from(document.querySelectorAll("select[name='class_period[]']")).map((el) => el.value);
        
            const timetableSet = new Set();
            for (let i = 0; i < weekDays.length; i++) {
                const key = `${weekDays[i]}-${classPeriods[i]}`;
                if (timetableSet.has(key)) {
                    alert('Duplicate timetable entries are not allowed!');
                    event.preventDefault();
                    return;
                }
                timetableSet.add(key);
            }
        });
    </script>
</head>
