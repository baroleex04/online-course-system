<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Course</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .container {
            margin-top: 20px;
        }
        .timetable-entry {
            background-color: rgba(255, 255, 255, 0.8); /* Slightly opaque white background */
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .timetable-entry:not(:last-child) {
            margin-bottom: 15px;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href='/<%= userType.toLowerCase() %>-homepage'>
                <%= userType %> Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                    <% if (userType === 'Student') { %>
                        <!-- Student-specific Nav Items -->
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register-course">Register a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-calendar">Timetable</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cancel-course">Cancel a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/past-courses">History Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/feedback">Feedback a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                    <% } else if (userType === 'Faculty' || userType === 'Staff') { %>
                        <!-- Faculty-specific Nav Items -->
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-course">Add Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-student-registrations">View Student Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/edit-course">Edit Course</a>
                        </li>
                    <% } %>
                    <% if (userType === 'Admin') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-course">Add Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/list-courses">Edit Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-student-registrations">View Student Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/create-user">Create Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/delete-user">Delete Users</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Edit Course Form -->
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="text-center text-primary mb-4">Edit Course</h1>
                        <form action="/edit-course/<%= course.cid %>/<%= course.semester %>" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Course Name</label>
                                <input type="text" name="name" id="name" class="form-control" 
                                       value="<%= course.name %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="credit" class="form-label">Credits</label>
                                <input type="number" name="credit" id="credit" class="form-control" 
                                       value="<%= course.credit %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="instructor" class="form-label">Instructor</label>
                                <input type="text" name="instructor" id="instructor" class="form-control" 
                                       value="<%= course.instructor %>" required>
                            </div>

                            <h2 class="text-secondary mt-4">Timetable</h2>
                            <div id="timetable-container">
                                <% course.timetable.forEach(slot => { %>
                                    <div class="row timetable-entry">
                                        <div class="col-md-5">
                                            <select name="week_day[]" class="form-select" required>
                                                <option value="2" <%= slot.week_day === 2 ? 'selected' : '' %>>Monday</option>
                                                <option value="3" <%= slot.week_day === 3 ? 'selected' : '' %>>Tuesday</option>
                                                <option value="4" <%= slot.week_day === 4 ? 'selected' : '' %>>Wednesday</option>
                                                <option value="5" <%= slot.week_day === 5 ? 'selected' : '' %>>Thursday</option>
                                                <option value="6" <%= slot.week_day === 6 ? 'selected' : '' %>>Friday</option>
                                                <option value="7" <%= slot.week_day === 7 ? 'selected' : '' %>>Saturday</option>
                                                <option value="8" <%= slot.week_day === 8 ? 'selected' : '' %>>Sunday</option>
                                            </select>
                                        </div>
                                        <div class="col-md-5">
                                            <select name="class_period[]" class="form-select" required>
                                                <% for (let i = 1; i <= 12; i++) { %>
                                                    <option value="<%= i %>" 
                                                            <%= slot.class_period === i ? 'selected' : '' %>>
                                                        Period <%= i %>
                                                    </option>
                                                <% } %>
                                            </select>
                                        </div>
                                        <div class="col-md-2 d-flex align-items-center">
                                            <button type="button" class="btn btn-danger btn-sm" 
                                                    onclick="this.parentElement.parentElement.remove()">Remove</button>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                            <button type="button" class="btn btn-secondary btn-sm mb-3" 
                                    onclick="addTimetableEntry()">Add Timetable Entry</button>
                            <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function addTimetableEntry() {
            const container = document.getElementById('timetable-container');
            const row = document.createElement('div');
            row.className = 'row timetable-entry';

            row.innerHTML = `
                <div class="col-md-5">
                    <select name="week_day[]" class="form-select" required>
                        <option value="2">Monday</option>
                        <option value="3">Tuesday</option>
                        <option value="4">Wednesday</option>
                        <option value="5">Thursday</option>
                        <option value="6">Friday</option>
                        <option value="7">Saturday</option>
                        <option value="8">Sunday</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <select name="class_period[]" class="form-select" required>
                        <% for (let i = 1; i <= 12; i++) { %>
                            <option value="<%= i %>">Period <%= i %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-center">
                    <button type="button" class="btn btn-danger btn-sm" onclick="this.parentElement.parentElement.remove()">Remove</button>
                </div>
            `;

            container.appendChild(row);
        }
    </script>
</body>
</html>
