<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Schedule</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .course-cell {
            background-color: inherit;
        }
        .container {
            margin-top: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            color: #333;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            text-align: center;
            
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        .time-slot {
            background-color: #f4f4f4;
            color: #333;
            font-weight: bold;
        }
        .navbar {
            background-color: #f8f9fa !important;
            padding: 0;
        }
        .nav-link {
            color: #333;
        }
        .nav-link:hover {
            background-color: #e0e3e7;
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href='/<%= userType.toLowerCase() %>-homepage'>
                <%= userType %> Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                    <li class="nav-item">
                        <a class="nav-link" href="/courses">View Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register-course">Register a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/view-calendar">Timetable</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cancel-course">Cancel a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/past-courses">History Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/feedback">Feedback a Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/view-feedback">View Feedback</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1 class="text-center">My Registered Courses (Semester <%= nextSemesterCode %>)</h1>
        <h1 class="text-center">Total credit: <%= totalCredit %></h1>
    
        <table>
            <thead>
                <tr>
                    <th class="time-slot">Time/Day</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Saturday</th>
                    <th>Sunday</th>
                </tr>
            </thead>
            <tbody>
                <% 
                // Softer pastel colors
                const colors = ['#FFB3B3', '#B3FFB3', '#B3D9FF', '#FFB3D9', '#D9B3FF', '#B3FFFF', '#FFEBB3'];
                const courseColors = {};  // Object to store colors for each course
                const usedColors = new Set();  // To keep track of already used colors
                
                // Function to get a fixed color for each course
                function getCourseColor(course) {
                    if (!courseColors[course]) {
                        // Find the first available color not used yet
                        let color;
                        for (let i = 0; i < colors.length; i++) {
                            if (!usedColors.has(colors[i])) {
                                color = colors[i];
                                usedColors.add(color);
                                break;
                            }
                        }
                        // If all colors are used, fallback to a random one
                        if (!color) {
                            color = colors[0];  // Fallback to the first color if needed
                        }
                        courseColors[course] = color;  // Assign the color to the course
                    }
                    return courseColors[course];  // Return the assigned color
                }
    
                for (let period = 1; period <= 15; period++) { %>
                    <tr>
                        <td class="time-slot">Period <%= period %><br><%= period + 5 %>h-<%= period + 6 %>h</td>
                        <% for (let day = 2; day <= 8; day++) { 
                            const course = timetable[period] && timetable[period][day] ? timetable[period][day] : '';
                            const color = course ? getCourseColor(course) : 'transparent';  // Default to 'transparent' if no course
                        %>
                            <td style="background-color: <%= color %>;">
                                <%= course %>  <!-- Empty cells will remain blank -->
                            </td>
                        <% } %>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
    
    

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
