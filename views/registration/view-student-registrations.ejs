<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Student Registrations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
        }
        .navbar {
            background-color: #f8f9fa !important; /* Brighter navbar */
            padding: 0; /* Remove padding for full-height nav items */
        }
        .nav-link:hover {
            background-color: #e0e3e7;
            transform: scale(1.05);
        }
        .container {
            margin-top: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            padding: 20px;
            color: #333;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .student-card {
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f8f9fa;
            padding: 20px;
        }
        .student-card h3 {
            color: #007bff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href='/<%= userType.toLowerCase() %>-homepage'>
                <%= userType %> Portal
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                    <% if (userType === 'Student') { %>
                        <!-- Student-specific Nav Items -->
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register-course">Register a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-calendar">Timetable</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/cancel-course">Cancel a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/past-courses">History Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/feedback">Feedback a Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                    <% } else if (userType === 'Faculty' || userType === 'Staff') { %>
                        <!-- Faculty-specific Nav Items -->
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-course">Add Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-student-registrations">View Student Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/edit-course">Edit Course</a>
                        </li>
                    <% } %>
                    <% if (userType === 'Admin') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-course">Add Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/list-courses">Edit Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-student-registrations">View Student Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/create-user">Create Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/delete-user">Delete Users</a>
                        </li>
                    <% } %>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1 class="text-center">Student Registrations</h1>
        
        <!-- Search Form -->
        <form action="/view-student-registrations" method="GET" class="mb-4">
            <div class="row g-3">
                <div class="col-md-3">
                    <select name="criteria" class="form-select">
                        <option value="name" <%= criteria === 'name' ? 'selected' : '' %>>Student Name</option>
                        <option value="email" <%= criteria === 'email' ? 'selected' : '' %>>Student Email</option>
                        <option value="course_name" <%= criteria === 'course_name' ? 'selected' : '' %>>Course Name</option>
                        <option value="cid" <%= criteria === 'cid' ? 'selected' : '' %>>Course ID</option>
                        <option value="semester" <%= criteria === 'semester' ? 'selected' : '' %>>Semester</option>
                    </select>
                </div>
                <div class="col-md-7">
                    <input 
                        type="text" 
                        name="query" 
                        class="form-control" 
                        placeholder="Enter search query" 
                        value="<%= query %>" 
                    />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>

        <% if (students.length > 0) { %>
            <% students.forEach(student => { %>
                <div class="student-card">
                    <h3><%= student.name %> (ID: <%= student.user_id %>)</h3>
                    <p><strong>Email:</strong> <%= student.email %></p>
                    <% if (student.registrations.length > 0) { %>
                        <h4>Registrations:</h4>
                        <ul>
                            <% student.registrations.forEach(registration => { %>
                                <li>
                                    <strong>Course:</strong> <%= registration.course_name %> (<%= registration.course_id %>)
                                    <strong>Semester:</strong> <%= registration.semester %>
                                    <% if (registration.timetable.length > 0) { %>
                                        <p><strong>Timetable:</strong></p>
                                        <ul>
                                            <% registration.timetable.forEach(slot => { %>
                                                <li>Day: <%= ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'][slot.week_day - 2] %>, Period: <%= slot.class_period %></li>
                                            <% }) %>
                                        </ul>
                                    <% } %>
                                </li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p>No registrations found.</p>
                    <% } %>
                </div>
            <% }) %>
        <% } else { %>
            <p class="text-center">No students or registrations found.</p>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
