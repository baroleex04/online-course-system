<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <%- include('../partials/style'); %>
</head>
<body>
    <!-- Navbar -->
    <% if (userType === 'Student') { %>
        <!-- Student-specific navbar content -->
    <% } else if (userType === 'Faculty' || userType === 'Staff') { %>
        <!-- Faculty/Staff-specific navbar content -->
    <% } %>
    <% if (userType === 'Admin') { %>
        <%- include('../partials/nav-admin'); %>
    <% } %>

    <!-- Main Content -->
    <div class="container" style="margin-left: 250px; padding-top: 20px;">
        <h1 class="text-center mb-4">User: <%= user.fname %> <%= user.lname %></h1>

        <table class="table table-bordered thead-dark">
            <tr>
                <th>User ID</th>
                <td><%= user.user_id %></td>
            </tr>
            <tr>
                <th>Username</th>
                <td><%= user.username %></td>
            </tr>
            <tr>
                <th>Full Name</th>
                <td><%= user.fname %> <%= user.lname %></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><%= user.email %></td>
            </tr>
            <tr>
                <th>User Type</th>
                <td><%= user.user_type %></td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td><%= user.nationality %></td>
            </tr>
        </table>

        <% if (user.user_type === 'Student') { %>
            <h3 class="mt-4">Student Information</h3>
            <table class="table table-bordered">
                <tr>
                    <th>Enrollment Year</th>
                    <td><%= extraInfo.enroll_year %></td>
                </tr>
                <tr>
                    <th>Study Status</th>
                    <td><%= extraInfo.study_status %></td>
                </tr>
            </table>
        <% } else if (user.user_type === 'Staff') { %>
            <h3 class="mt-4">Staff Information</h3>
            <table class="table table-bordered">
                <tr>
                    <th>Position</th>
                    <td><%= extraInfo.position %></td>
                </tr>
            </table>
        <% } else if (user.user_type === 'Faculty') { %>
            <h3 class="mt-4">Faculty Information</h3>
            <table class="table table-bordered">
                <tr>
                    <th>Department</th>
                    <td><%= extraInfo.department %></td>
                </tr>
            </table>
        <% } else if (user.user_type === 'Admin') { %>
            <h3 class="mt-4">Admin Information</h3>
            <table class="table table-bordered">
                <tr>
                    <th>Role</th>
                    <td>Administrator</td>
                </tr>
            </table>
        <% } %>

        <a href="/users" class="btn btn-outline-secondary mt-4">Back to Users List</a>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
