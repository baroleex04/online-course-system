<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6691c8, #2575fc);
            color: #fff;
        }
        .container {
            margin-top: 30px;
        }
        table tbody tr:nth-child(odd) {
            background-color: rgba(255, 255, 255, 0.1);
        }
        table tbody tr:nth-child(even) {
            background-color: rgba(255, 255, 255, 0.2);
        }
        table tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.3) !important;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 40px;">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin-homepage">Admin Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-stretch">
                        <li class="nav-item">
                            <a class="nav-link" href="/courses">View Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/add-course">Add Course</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/list-courses">Edit Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-student-registrations">View Student Registrations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/view-feedback">View Feedback</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/create-user">Create Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/delete-user">Delete Users</a>
                        </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <h1 class="text-center my-4">Delete User</h1>
        <% if (users.length > 0) { %>
            <table class="table table-striped table-hover text-center table-light">
                <thead class="table-light">
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>User Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.user_id %></td>
                            <td><%= user.username %></td>
                            <td><%= user.fname %></td>
                            <td><%= user.lname %></td>
                            <td><%= user.user_type %></td>
                            <td>
                                <form action="/delete-user" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="user_id" value="<%= user.user_id %>">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No users found.</p>
        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
