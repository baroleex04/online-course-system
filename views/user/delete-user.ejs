<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete User</title>
    <%- include('../partials/style'); %>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/nav-admin'); %>

    <div class="container" style="margin-left: 250px; padding-top: 20px;">
        <h1 class="text-center my-4">Delete User</h1>
    
        <% if (users.length > 0) { %>
            <form action="/delete-selected-users" method="POST">
                <table class="table table-striped table-hover text-center table-light">
                    <thead class="table-light">
                        <tr>
                            <th><input type="checkbox" id="select-all"> Select All</th>
                            <th>User ID</th>
                            <th>Username</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>User Type</th>
                            <!-- <th>Actions</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><input type="checkbox" name="selectedUsers[]" value="<%= user.user_id %>"></td>
                                <td><%= user.user_id %></td>
                                <td><%= user.username %></td>
                                <td><%= user.fname %></td>
                                <td><%= user.lname %></td>
                                <td><%= user.user_type %></td>
                                <td>
                                    <!-- Optionally, you can keep the individual delete button here too -->
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
    
                <!-- Delete Selected Users Button -->
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger">Delete Selected Users</button>
                </div>
            </form>
        <% } else { %>
            <p class="text-center">No users found.</p>
        <% } %>
    </div>
    
    <script>
        // Select all checkboxes when "Select All" is clicked
        document.getElementById('select-all').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"][name="selectedUsers[]"]');
            checkboxes.forEach(checkbox => checkbox.checked = this.checked);
        });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
